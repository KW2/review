<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cal_edit1"/>
    <Button
        android:id="@+id/cal_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="ok"/>

    <TableLayout
        android:layout_below="@id/cal_edit1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:layout_above="@id/cal_btn1">
        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/cal_1"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="1"/>
            <Button
                android:id="@+id/cal_2"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="2"/>
            <Button
                android:id="@+id/cal_3"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="3"/>
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/cal_4"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="4"/>
            <Button
                android:id="@+id/cal_5"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="5"/>
            <Button
                android:id="@+id/cal_6"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="6"/>
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/cal_7"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="7"/>
            <Button
                android:id="@+id/cal_8"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="8"/>
            <Button
                android:id="@+id/cal_9"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="9"/>
        </TableRow>
        <TableRow android:layout_weight="1">
            <TextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:id="@+id/cal_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="0"/>
            <Button
                android:id="@+id/cal_Clear"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Clear"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>